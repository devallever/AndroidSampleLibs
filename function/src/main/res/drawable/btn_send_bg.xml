<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:width="80dp" android:height="30dp" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="#ffffcc00" />
            <corners android:radius="45dip" />
        </shape>
    </item>
    <item android:width="80dp" android:height="30dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCFFCC00" />
            <corners android:radius="45dip" />
        </shape>
    </item>
</selector>