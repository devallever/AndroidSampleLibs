<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="conversationVM"
            type="app.allever.android.sample.function.im.viewmodel.ConversationViewModel" />

    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/refreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleY="-1"
            app:layout_constraintBottom_toTopOf="@+id/inputView"
            app:layout_constraintTop_toTopOf="parent"
            app:srlEnableAutoLoadMore="false"
            app:srlEnableNestedScrolling="false"
            app:srlEnableRefresh="false">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fadeScrollbars="false"
                android:overScrollMode="never"
                android:paddingHorizontal="14dp"
                android:scaleY="-1"
                android:scrollbars="none"
                tools:itemCount="3"
                tools:listitem="@layout/rv_text_msg_receive" />

            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:id="@+id/footerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleY="-1"
                app:srlTextPulling="下拉加载更多" />

        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

        <View
            android:id="@+id/inputView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#50ffff00"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>